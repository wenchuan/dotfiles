# this file is sourced by ~/.zshrc to set up zsh aliases for interactive zsh.

alias v='vim'
alias b='bc'
alias c='clear'
alias p='pwd'
alias u='cd ..'
alias note='cd ~/projects/log && vim ~/projects/log/current.log'

alias ls='ls -F --color=auto'
alias l='ls'
alias ll='ls -lh'
alias lla='ll -a'
alias du='du -h'
alias df='df -h'

# greps
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# git
alias gs='git status'
alias gb='git branch'
alias gl='git log'
alias gll='git log --stat'

# maximize compiler warning
alias gcc='gcc -std=c99 -Wall -Wstrict-prototypes -Wextra -pedantic'
alias g++='g++ -Wall -Wextra -pedantic -Weffc++'
alias clang='clang -Wall'
alias clang++='clang++ -Wall'
alias cc11='clang++-3.2 --std=c++11 -Wall -Wextra -pedantic -Weffc++'

# readline wrapper around REPL
#alias python='python2.7'
alias ocaml='rlwrap ocaml'
alias scheme='rlwrap scheme'

# ubuntu stuff
alias update='sudo apt-get update && sudo apt-get upgrade && sudo apt-get autoclean && sudo apt-get autoremove'

# vim: set ft=zsh
